{
  "name": "Erreur 404",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "A/B TEST"
    },
    {
      "type": "text",
      "id": "identificateur",
      "label": "Identificateur de section",
